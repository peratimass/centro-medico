Option Explicit
Dim StrCodTabla As String
Dim StrCodMarca As String
Private Sub Form_Load()
CenterForm Me
Me.Top = FrmMarcas.Top + 100
  Select Case FrmMarcas.Procedencia
    Case Modificar
      Call LLENA
  End Select
End Sub

Private Sub LLENA()
  
  StrCodTabla = FrmMarcas.HfgMarcas.TextMatrix(FrmMarcas.HfgMarcas.Row, 0)
  txtdescripcion.Text = FrmMarcas.HfgMarcas.TextMatrix(FrmMarcas.HfgMarcas.Row, 1)

End Sub

Private Sub Save()
  If txtdescripcion.Text = "" Then
    MsgBox MSGFALTADATOS, vbCritical, MSGVALIDACION
  Else
    
    Select Case FrmMarcas.Procedencia
      Case nuevo
        strCadena = "SELECT id_marca FROM marca where id_usu='" & KEY_RUC & "' ORDER BY id_marca DESC"
        Call ConfiguraRst(strCadena)
        If rst.RecordCount > 0 Then
            StrCodMarca = formato_item(Val(rst("id_marca") + 1), 5)
        Else
            StrCodMarca = formato_item(1, 5)
        End If
        
        strCadena = "INSERT INTO marca(id_marca,descripcion,id_usu)VALUES ('" & StrCodMarca & "','" & txtdescripcion.Text & "','" & KEY_RUC & "')"
        CnBd.Execute (strCadena)
         
        Call FrmMarcas.actualizar
        Unload Me
        
        
      Case Modificar
        FrmMarcas.HfgMarcas.col = 0
        strCadena = "UPDATE marca SET descripcion='" & txtdescripcion.Text & "' WHERE id_marca = '" & Trim(StrCodTabla) & "' AND id_usu='" & KEY_RUC & "'"
        CnBd.Execute (strCadena)
         
        Call FrmMarcas.actualizar
        Unload Me
                
    End Select
  End If
End Sub
Private Sub TlbAcciones_ButtonClick(ByVal Button As MSComctlLib.Button)
On Error GoTo Error
  Select Case Button.key
    Case KEY_SAVE
      Call Save
    Case KEY_CANCEL
      Unload Me
  End Select
  Exit Sub
Error:
  MsgBox Err.Number & " " & Err.Description, vbCritical, MSGERROR
  Exit Sub
End Sub

