Public Sub Actualizar()
CenterForm Me
Me.Top = 500
strCadena = "SELECT id_merma as Codigo,descripcion as Descripcion FROM merma_motivo WHERE ruc='" & KEY_RUC & "' ORDER BY descripcion"
Call llenarGrid(Me.HfgLinea, Me)
End Sub
Private Sub TxtLinea_Change()
strCadena = "SELECT id_merma as Codigo,descripcion as Descripcion FROM merma_motivo WHERE descripcion LIKE '%" & Trim(Me.TxtLinea.Text) & "%' AND ruc='" & KEY_RUC & "'ORDER BY Descripcion ASC"
Call llenarGrid(Me.HfgLinea, Me)
End Sub
Private Sub HfgLinea_Click()
If HfgLinea.Row > 0 Then
    TlbAcciones.Buttons(KEY_UPDATE).Enabled = True
    TlbAcciones.Buttons(KEY_DELETE).Enabled = True
  End If
End Sub
Private Sub TlbAcciones_ButtonClick(ByVal Button As MSComctlLib.Button)
  Select Case Button.key
    Case KEY_NEW
      Procedencia = Nuevo
      FrmDetalleMerma.Show
    Case KEY_UPDATE
      Procedencia = Modificar
      FrmDetalleMerma.Show
    Case KEY_DELETE
      If MsgBox(MSGELIMINAR, vbQuestion + vbYesNo, MSGVERIFICACION) = vbYes Then
        Me.HfgLinea.col = 0
        strCadena = "DELETE FROM motivo_merma WHERE id_merma='" & Trim(Me.HfgLinea.Text) & "'"
        Call EjecutaRST(strCadena)
        Set RstEjecuta = Nothing
        Form_Load
      End If
    Case KEY_EXIT
        Unload Me
  End Select
End Sub






